<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="center|top">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your user data have been saved!"
            android:textColor="#ff8c00"
            android:id="@+id/serverFoundText" android:layout_alignParentLeft="true" android:layout_marginLeft="55dp"
            android:layout_alignParentTop="true" android:layout_marginTop="40dp"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Home"
            android:id="@+id/registerButton"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:onClick="returnHome" />

</RelativeLayout>